<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/orchid_3d"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center" />

        <TextView
            android:text="Monitor de Riego"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#6B0F8E"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- BOTÓN CALENDARIO -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnCalendario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <TextView
                android:text="Calendario de Riego"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

        <!-- BOTÓN SENSOR -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnSensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <TextView
                android:text="Monitoreo en Tiempo Real"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

        <!-- BOTÓN HISTORIAL -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <TextView
                android:text="Historial Ambiental"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
